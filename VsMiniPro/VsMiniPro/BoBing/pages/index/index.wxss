.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.begin {
  margin-top: 5rem;
}

.begin button{
  margin-left:0;
}

.programName,.author,.contact{
  width: 95%;
  margin: auto;
  text-align: center;
  font-size: 1.5rem;
  display: block;
  padding: 0.5rem;
}
.author{
  font-size: 1rem;
}
.contact{
  font-size: 0.8rem;
}